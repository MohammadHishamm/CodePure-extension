{
  "name": "codepure",
  "displayName": "CodePure",
  "description": "Code smells detector",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "vscode": "^1.93.0"
  },
  "vsce": {
    "noVerify": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MohammadHishamm/Graduation-Project"
  },
  "icon": "./src/Assets/codepure-logo.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python",
    "onLanguage:java"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codepure",
          "title": "CodePure",
          "icon": "./src/Assets/codepure-icon.png"
        }
      ]
    },
    "views": {
      "codepure": [
        {
          "id": "codepureTreeView",
          "name": "CodePure Tree View"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.activateCommand",
        "title": "CodePure: Activate"
      },
      {
        "command": "extension.analyzeSelectedCode",
        "title": "CodePure: Analyze Selected Code"
      },
      {
        "command": "extension.deactivateCommand",
        "title": "CodePure: Deactivate"
      },
      {
        "command": "extension.openDashboard",
        "title": "CodePure: Open Dashboard"
      },
      {
        "command": "codepure.openSettings",
        "title": "CodePure: Metrics Settings"
      }
    ],
    "keybindings": [
      {
        "command": "extension.activateCommand",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a",
        "when": "editorTextFocus"
      },
      {
        "command": "extension.deactivateCommand",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "editorTextFocus"
      },
      {
        "command": "extension.openDashboard",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "editorTextFocus"
      },
      {
        "command": "extension.analyzeSelectedCode",
        "key": "ctrl+n",
        "mac": "cmd+n",
        "when": "editorTextFocus"
      },
      {
        "command": "codepure.openSettings",
        "key": "ctrl+alt+S",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "extension.analyzeSelectedCode",
          "when": "editorHasSelection",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "CodePure",
      "properties": {
        "codepure.selectedMetrics": {
          "type": "array",
          "default": [
            "LOC",
            "NOA",
            "NOM",
            "NOPA",
            "NOAM"
          ],
          "description": "Select the metrics to display",
          "items": {
            "type": "string",
            "enum": [
              "LOC",
              "AMW",
              "AFTD",
              "DAC",
              "WMC",
              "WOC",
              "NOA",
              "NOM",
              "NOAM",
              "NOPA",
              "NAbsm",
              "NProtM",
              "FANOUT",
              "NDU",
              "NAS",
              "BUR",
              "NOD",
              "NODD",
              "TCC"
            ]
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ ",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.9.1",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "python-ast": "^0.1.0",
    "tree-sitter": "^0.21.1",
    "tree-sitter-java": "^0.23.4",
    "tree-sitter-python": "^0.23.4"
  }
}